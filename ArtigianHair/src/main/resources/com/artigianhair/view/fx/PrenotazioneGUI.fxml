<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="800.0" spacing="0.0" styleClass="root"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.artigianhair.view.fx.PrenotazioneGUIController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <HBox alignment="CENTER" prefHeight="50.0" spacing="30.0" styleClass="nav-bar">
        <Hyperlink onAction="#goToLogin" text="Login" />
        <Hyperlink onAction="#goToPrenotazione" text="Prenota" />
        <Hyperlink onAction="#goToEcommerce" text="Acquista Prodotto" />
        <Hyperlink onAction="#goToProfilo" text="Profilo" />
        <Hyperlink onAction="#handleLogout" text="Logout" style="-fx-text-fill: #FFCCCC; -fx-font-weight: bold;" />
    </HBox>

    <VBox alignment="CENTER" spacing="25.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="30.0" left="50.0" right="50.0" top="20.0" />
        </padding>

        <Label text="Prenotazione appuntamento:" styleClass="titolo-principale" />

        <VBox alignment="CENTER" spacing="10.0">
            <Label text="1. Scegli la data dal calendario:" styleClass="sottotitolo" />
            <DatePicker fx:id="datePicker" prefWidth="250.0" styleClass="date-picker" />
        </VBox>

        <VBox alignment="CENTER" spacing="10.0">
            <Label text="2. Scegli la fascia oraria:" styleClass="sottotitolo" />
            <HBox alignment="CENTER" spacing="30.0">
                <RadioButton fx:id="mattinaRadio" text="Mattina (M)" textFill="WHITE">
                    <font><Font name="System Bold" size="13.0" /></font>
                </RadioButton>
                <RadioButton fx:id="pomeriggioRadio" text="Pomeriggio (P)" textFill="WHITE">
                    <font><Font name="System Bold" size="13.0" /></font>
                </RadioButton>
            </HBox>
        </VBox>

        <VBox alignment="CENTER" spacing="10.0">
            <Label text="3. Seleziona i trattamenti:" styleClass="sottotitolo" />
            <VBox alignment="CENTER_LEFT" spacing="5.0" maxWidth="200.0">
                <CheckBox fx:id="piegaCheck" text="Piega" textFill="WHITE" />
                <CheckBox fx:id="taglioCheck" text="Taglio" textFill="WHITE" />
                <CheckBox fx:id="coloreCheck" text="Colore" textFill="WHITE" />
                <CheckBox fx:id="keratinaCheck" text="Keratina" textFill="WHITE" />
            </VBox>
            <Text text="(Puoi selezionare piÃ¹ trattamenti)" styleClass="sottotitolo" />
        </VBox>

        <Button onAction="#handlePrenotazione" prefHeight="45.0" prefWidth="250.0" text="CONFERMA PRENOTAZIONE" styleClass="button-primary" />
        <Button onAction="#handleVediMieiAppuntamenti" prefHeight="45.0" prefWidth="250.0" text="RECUPERA ULTIMO APPUNTAMENTO" styleClass="button-secondary" />
        <Hyperlink onAction="#goToHome" text="Home page" styleClass="hyperlink-dark" />
    </VBox>
</VBox>