<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="750.0" spacing="0.0"
      style="-fx-background-color: #B59E8D;" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.artigianhair.view.fx.RegistrazioneGUIController">

    <HBox alignment="CENTER" prefHeight="50.0" spacing="30.0" style="-fx-background-color: #9C8677;">
        <Hyperlink text="Login" textFill="WHITE" onAction="#goToLogin" />
        <Hyperlink text="Dicono di noi" textFill="WHITE" />
        <Hyperlink text="Prenota" textFill="WHITE" />
        <Hyperlink text="Acquista Prodotto" textFill="WHITE" />
    </HBox>

    <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="10.0" />
        </padding>

        <Label text="Registrazione:" textFill="WHITE">
            <font>
                <Font name="Serif Bold" size="28.0" />
            </font>
        </Label>

        <GridPane alignment="CENTER" hgap="40.0" vgap="15.0">
            <TextField fx:id="nomeField" promptText="Nome" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-background-radius: 15; -fx-background-color: #E6D2C1; -fx-padding: 8;"/>

            <TextField fx:id="emailField" promptText="E-mail" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-background-radius: 15; -fx-background-color: #E6D2C1; -fx-padding: 8;"/>

            <TextField fx:id="cognomeField" promptText="Cognome" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-background-radius: 15; -fx-background-color: #E6D2C1; -fx-padding: 8;"/>

            <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           style="-fx-background-radius: 15; -fx-background-color: #E6D2C1; -fx-padding: 8;"/>

        </GridPane>

        <Button onAction="#handleRegistration" prefWidth="120.0" text="Invio"
                style="-fx-background-color: #7D6B5D; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" />

        <HBox alignment="CENTER" spacing="25.0">
            <Hyperlink onAction="#goToLogin" text="Login" textFill="#4D3E33" />
            <Hyperlink onAction="#goToHome" text="Home page" textFill="#4D3E33" />
        </HBox>
    </VBox>
</VBox>