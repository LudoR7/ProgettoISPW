<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="750.0" spacing="0.0" styleClass="root"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.artigianhair.view.fx.RegistrazioneGUIController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <HBox alignment="CENTER" prefHeight="50.0" spacing="30.0" styleClass="nav-bar">
        <Hyperlink text="Login" onAction="#goToLogin" />
    </HBox>

    <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="10.0" />
        </padding>

        <Label text="Registrazione:" styleClass="titolo-principale" />

        <GridPane alignment="CENTER" hgap="40.0" vgap="15.0">
            <TextField fx:id="nomeField" promptText="Nome" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="text-input" />
            <TextField fx:id="emailField" promptText="E-mail" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="text-input" />
            <TextField fx:id="cognomeField" promptText="Cognome" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="text-input" />
            <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-input" />
        </GridPane>

        <Button onAction="#handleRegistration" prefWidth="120.0" text="Invio" styleClass="button-primary" />

        <HBox alignment="CENTER" spacing="25.0">
            <Hyperlink onAction="#goToHome" text="Home page" styleClass="hyperlink-dark" />
        </HBox>
    </VBox>
</VBox>