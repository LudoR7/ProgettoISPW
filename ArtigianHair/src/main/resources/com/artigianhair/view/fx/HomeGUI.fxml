<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="0.0"
      styleClass="root" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.artigianhair.view.fx.HomeGUIController">

    <HBox alignment="CENTER" prefHeight="60.0" spacing="40.0" styleClass="nav-bar">
        <Hyperlink onAction="#goToPrenotazione" text="Prenota" styleClass="hyperlink" />
        <Hyperlink onAction="#goToEcommerce" text="Acquista Prodotto" styleClass="hyperlink" />
        <Hyperlink onAction="#goToProfilo" text="Profilo" styleClass="hyperlink" />
        <Hyperlink onAction="#handleLogout" text="Logout" styleClass="hyperlink" style="-fx-text-fill: #FFCCCC; -fx-font-weight: bold;" />
    </HBox>

    <VBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="50.0" top="50.0" />
        </padding>

        <VBox alignment="CENTER" spacing="10.0">
            <Text text="ARTIGIANHAIR" styleClass="titolo-principale" />
            <Text text="Il tuo parrucchiere di fiducia su Roma" styleClass="sottotitolo" />
        </VBox>

        <VBox alignment="CENTER" spacing="20.0">
            <Button onAction="#goToPrenotazione" prefHeight="50.0" prefWidth="300.0"
                    text="PRENOTA APPUNTAMENTO" styleClass="button-primary" />

            <Button onAction="#goToEcommerce" prefHeight="50.0" prefWidth="300.0"
                    text="ACQUISTA ORA" styleClass="button-secondary" />
        </VBox>
    </VBox>

    <HBox alignment="CENTER" prefHeight="100.0" spacing="50.0" styleClass="nav-bar">
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Text fill="WHITE" text="CONTATTACI">
                <font><Font name="System Bold" size="14.0" /></font>
            </Text>
            <Text fill="WHITE" text="Via delle Rose, 12, Roma" />
            <Text fill="WHITE" text="Tel: +39 06 1234567" />
        </VBox>
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Text fill="WHITE" text="ORARI">
                <font><Font name="System Bold" size="14.0" /></font>
            </Text>
            <Text fill="WHITE" text="Lun - Sab: 09:00 - 19:00" />
            <Text fill="WHITE" text="Dom : Chiuso" />
        </VBox>
    </HBox>
</VBox>