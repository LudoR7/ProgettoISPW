<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="0.0"
      style="-fx-background-color: #B59E8D;" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.artigianhair.view.fx.EcommerceGUIController">

    <HBox alignment="CENTER" prefHeight="60.0" spacing="40.0" style="-fx-background-color: #9C8677;">
        <Hyperlink onAction="#goToPrenotazione" text="Prenota" textFill="WHITE" />
        <Hyperlink onAction="#goToEcommerce" text="Acquista Prodotto" textFill="WHITE" />
        <Hyperlink onAction="#goToProfilo" text="Profilo" textFill="WHITE" />
        <Hyperlink onAction="#handleLogout" text="Logout" textFill="#FFCCCC" style="-fx-font-weight: bold;" />
    </HBox>

    <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
        <padding><Insets bottom="20.0" left="40.0" right="40.0" top="20.0" /></padding>

        <Text fill="WHITE" text="Acquisto prodotti">
            <font><Font name="Serif Bold" size="36.0" /></font>
        </Text>

        <VBox fx:id="paneSceltaCapelli" alignment="CENTER" spacing="15.0">
            <Text fill="#4D3E33" text="Scegli le caratteristiche dei tuoi capelli:">
                <font><Font name="System Italic" size="18.0" /></font>
            </Text>
            <HBox alignment="CENTER" spacing="15.0">
                <Button onAction="#onSceltaSecchi" prefWidth="180.0" text="Secchi e sfibrati"
                        style="-fx-background-color: #7D6B5D; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" />
                <Button onAction="#onSceltaGrassi" prefWidth="180.0" text="Grassi"
                        style="-fx-background-color: #7D6B5D; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" />
                <Button onAction="#onSceltaNormali" prefWidth="180.0" text="Normali"
                        style="-fx-background-color: #7D6B5D; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" />
            </HBox>
        </VBox>

        <VBox fx:id="paneSelezioneProdotti" alignment="CENTER" spacing="15.0" visible="false" managed="false">
            <Text fx:id="txtTitoloCategoria" fill="#4D3E33" text="Prodotti Consigliati:">
                <font><Font name="System Bold" size="16.0" /></font>
            </Text>
            <HBox alignment="CENTER" spacing="10.0">
                <VBox alignment="CENTER" spacing="5.0">
                    <Button fx:id="btnProd1" onAction="#addProd1" style="-fx-background-color: #E6D2C1; -fx-background-radius: 5;" />
                    <Text fx:id="txtDesc1" fill="#4D3E33" wrappingWidth="150.0" textAlignment="CENTER">
                        <font><Font name="System Italic" size="12.0" /></font>
                    </Text>
                </VBox>
                <VBox alignment="CENTER" spacing="5.0">
                    <Button fx:id="btnProd2" onAction="#addProd2" style="-fx-background-color: #E6D2C1; -fx-background-radius: 5;" />
                    <Text fx:id="txtDesc2" fill="#4D3E33" wrappingWidth="150.0" textAlignment="CENTER">
                        <font><Font name="System Italic" size="12.0" /></font>
                    </Text>
                </VBox>

                <VBox alignment="CENTER" spacing="5.0">
                    <Button fx:id="btnProd3" onAction="#addProd3" style="-fx-background-color: #E6D2C1; -fx-background-radius: 5;" />
                    <Text fx:id="txtDesc3" fill="#4D3E33" wrappingWidth="150.0" textAlignment="CENTER">
                        <font><Font name="System Italic" size="12.0" /></font>
                    </Text>
                </VBox>

            </HBox>
            <Button onAction="#confermaSelezione" text="Vai al Carrello"
                    style="-fx-background-color: #4D3E33; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" />

        </VBox>

        <VBox fx:id="paneCarrello" alignment="CENTER" spacing="10.0" visible="false" managed="false">
            <Text fill="WHITE" text="IL TUO CARRELLO:">
                <font><Font name="System Bold" size="18.0" /></font>
            </Text>
            <TextArea fx:id="txtAreaCarrello" editable="false" prefHeight="100.0" prefWidth="400.0"
                      style="-fx-control-inner-background: #E6D2C1;" />
            <HBox alignment="CENTER" spacing="15.0">
                <Button onAction="#handleConfermaOrdine" text="CONFERMA ORDINE"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" />
                <Button onAction="#resetShopping" text="Continua Shopping"
                        style="-fx-background-color: #7D6B5D; -fx-text-fill: white; -fx-background-radius: 10;" />
                <Button onAction="#handleCancellaOrdine" text="CANCELLA ORDINE"
                        style="-fx-background-color: #7D6B5D; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" />
            </HBox>
        </VBox>
        <HBox alignment="CENTER" spacing="20.0">
            <Hyperlink onAction="#goToHome" text="Home page" textFill="#4D3E33" />
        </HBox>
        <Label fx:id="lblStatus" textFill="#4D3E33" style="-fx-font-weight: bold;" />
    </VBox>
</VBox>